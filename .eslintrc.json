{
    "plugins": [],
    "extends": ["plugin:prettier/recommended", "eslint:recommended"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "es2021": true
    },
    "ignorePatterns": ["node_modules/"],
    "rules": {
        "no-console": "off",
        "prettier/prettier": [
            "error",
            {
                "endOfLine": "auto"
            }
        ],
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "js": "never",
                "jsx": "never",
                "ts": "never",
                "tsx": "never"
            }
        ],
        "lines-between-class-members": ["error", "always", {"exceptAfterSingleLine": true}],
        "no-explicit-any": false
    }
}
